<odoo>

    <record id="view_company_form" model="ir.ui.view">
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base_factoring.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='factor']//group[@name='config_facto']" position="inside">
                <button type="object" name="ui_configure_bpce_factoring_balance" string="Configure BPCE journals and accounts"/>
                <span/>
            </xpath>
            <xpath expr="//page[@name='factor']//group[@name='run_facto']" position="inside">
                <button type="object" name="ui_run_bpce_factoring_balance" string="Run BPCE factor" class="oe_highlight"/>
                <span/>
            </xpath>
        </field>
    </record>

</odoo>
